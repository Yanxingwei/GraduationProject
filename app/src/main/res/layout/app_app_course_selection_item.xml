<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_80"
        android:padding="@dimen/dimens_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimens_5"
        android:layout_marginBottom="@dimen/dimens_5">

        <ImageView
            android:id="@+id/textbook_picture"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_60"
            android:background="@mipmap/textbook1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_marginRight="@dimen/dimens_10">

            <TextView
                android:id="@+id/textbook_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大学语文"
                android:layout_weight="1.0"
                android:paddingTop="@dimen/dimens_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingBottom="@dimen/dimens_2">

                <TextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="闫星位"
                    android:gravity="bottom|center"
                    android:textSize="@dimen/textsize_12"
                    android:layout_weight="1.0"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="星期一、三（8、9节）"
                    android:gravity="bottom|center"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:textSize="@dimen/textsize_12"
                    android:layout_weight="1.0"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4教106"
                    android:gravity="bottom|center"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:textSize="@dimen/textsize_12"
                    android:layout_weight="1.0"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
