<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_panel_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_45"
            android:gravity="center_vertical"
            android:background="@color/common_tip_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="校区："
                android:layout_marginLeft="@dimen/dimens_10"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/select_campus"
                android:layout_width="@dimen/dimens_80"
                android:layout_height="@dimen/dimens_30"
                android:text="老校区"
                android:drawableRight="@mipmap/down"
                android:gravity="center"
                android:drawablePadding="@dimen/dimens_10"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="日期："
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimens_30"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="16-01-08周五"
                android:gravity="center"
                android:layout_weight="1.0"
                android:layout_marginRight="@dimen/dimens_10"
                android:background="#5c9bed"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_45"
            android:gravity="center_vertical"
            android:background="@color/common_tip_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="节次："
                android:layout_marginLeft="@dimen/dimens_10"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/select_what"
                android:layout_width="@dimen/dimens_80"
                android:layout_height="@dimen/dimens_30"
                android:text="1-2"
                android:gravity="center"
                android:background="#5c9bed"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="日期："
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimens_30"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/select_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_30"
                android:text="查询"
                android:gravity="center"
                android:layout_weight="1.0"
                android:layout_marginRight="@dimen/dimens_10"
                android:background="#5c9bed"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/list_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="点击“查询”按钮以查询空闲教室"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/common_tip_text"/>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
            android:columnWidth="@dimen/dimens_80"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dimens_10"
            android:horizontalSpacing="@dimen/dimens_10"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_10"
            android:scrollbars="none"
            android:visibility="gone">
        </GridView>

    </LinearLayout>

</LinearLayout>
