<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_panel_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimens_10">

        <TextView
            android:layout_width="@dimen/dimens_70"
            android:layout_height="match_parent"
            android:text="@string/change_pasw_old"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginRight="@dimen/dimens_10"
            android:textSize="@dimen/textsize_14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/change_pasw_old_put"
            android:textSize="@dimen/textsize_14"
            android:background="@drawable/common_no_shape"
            android:textCursorDrawable="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimens_10">

        <TextView
            android:layout_width="@dimen/dimens_70"
            android:layout_height="match_parent"
            android:text="@string/change_pasw_new"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginRight="@dimen/dimens_10"
            android:textSize="@dimen/textsize_14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/change_pasw_new_put"
            android:textSize="@dimen/textsize_14"
            android:background="@drawable/common_no_shape"
            android:textCursorDrawable="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimens_10">

        <TextView
            android:layout_width="@dimen/dimens_70"
            android:layout_height="match_parent"
            android:text="@string/change_pasw_new_ok"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginRight="@dimen/dimens_10"
            android:textSize="@dimen/textsize_14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/change_pasw_new_ok_put"
            android:textSize="@dimen/textsize_14"
            android:background="@drawable/common_no_shape"
            android:textCursorDrawable="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/view_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:background="@color/white"
            android:text="@string/change_pasw_btn"
            android:gravity="center"
            android:textColor="@color/common_tip_text"
            android:textSize="@dimen/textsize_18" />

    </LinearLayout>



</LinearLayout>
