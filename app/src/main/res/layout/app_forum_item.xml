<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_10">

        <com.example.teachingaffairs.ui.components.MyRoundImageView
            android:id="@+id/head_picture"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_40"
            android:layout_margin="@dimen/dimens_10"
            android:background="@mipmap/aaa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_15"
                android:text="闫星位"
                android:layout_marginTop="@dimen/dimens_10"/>

            <com.example.teachingaffairs.ui.components.MyTextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_15"
                android:layout_marginRight="@dimen/dimens_10"
                android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:lineSpacingExtra="@dimen/dimens_5"
                android:maxLines="5"/>

            <ImageView
                android:id="@+id/content_picture"
                android:layout_width="@dimen/dimens_80"
                android:layout_height="@dimen/dimens_80"
                android:layout_marginTop="@dimen/dimens_10"
                android:background="@mipmap/aaaa"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/release_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:layout_weight="1.0"/>

                <LinearLayout
                    android:id="@+id/discuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/minisns_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimens_15"
                        android:background="@mipmap/minisns_comment_normal"
                        android:layout_marginTop="@dimen/dimens_20"/>

                    <TextView
                        android:id="@+id/discuss_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens_5"
                        android:text="0"
                        android:layout_marginTop="@dimen/dimens_20"
                        android:layout_marginRight="@dimen/dimens_10"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/forum_underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0.5"
        android:background="@color/view_bg"/>

</LinearLayout>
