<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimens_10"
        android:paddingBottom="@dimen/dimens_10">

        <TextView
            android:id="@+id/old_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:gravity="center"
            android:paddingBottom="@dimen/dimens_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_10"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/notice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公告"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/notice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:50"/>

            </LinearLayout>

            <TextView
                android:id="@+id/notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示两行内容,必须要现实两行内容，一个公告内容应该会对于两行内容吧？"
                android:layout_marginTop="@dimen/dimens_15"
                android:maxLines="2"
                android:minLines="2"
                android:layout_marginBottom="@dimen/dimens_5"
                android:lineSpacingExtra="@dimen/dimens_5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0.5"
                android:background="@color/view_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源："
                    android:textSize="@dimen/textsize_10"/>
                <TextView
                    android:id="@+id/notice_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教务处"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/textsize_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:textSize="@dimen/textsize_10"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
