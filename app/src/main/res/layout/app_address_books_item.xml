<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_10">

        <TextView
            android:id="@+id/college_logo"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_16"/>

                <TextView
                    android:id="@+id/college_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/textsize_16"
                    android:layout_marginLeft="@dimen/dimens_5"/>

                <TextView
                    android:id="@+id/college_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10">

            <View
                android:id="@+id/college_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0.5"
                android:background="@color/view_bg"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
