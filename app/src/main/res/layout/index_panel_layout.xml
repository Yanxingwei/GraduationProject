<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/panel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45"
        android:orientation="horizontal"
        android:background="@color/commom_panel_bg">

        <TextView
            android:id="@+id/index_panel_titla"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_45"
            android:gravity="center"
            android:text="@string/index_panel_titla"
            android:textSize="@dimen/textsize_17"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_10"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/most"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/main_top_left_point_icon"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_15"
            android:gravity="center_vertical">

            <com.example.teachingaffairs.ui.components.MyRoundImageView
                android:id="@+id/sliding_menu"
                android:layout_width="@dimen/dimens_35"
                android:layout_height="@dimen/dimens_35"
                android:background="@mipmap/aaa"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/add_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/add_plan_detial"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dimens_15"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/view_bg"/>

</LinearLayout>
